<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="@drawable/bg" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >

        <Spinner
            android:id="@+id/spinInput"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:entries="@array/input_types"
            android:gravity="center_horizontal" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="5"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <EditText
            android:id="@+id/etInput1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="time"
            android:text="@string/Blank" >

            <requestFocus />
        </EditText>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tvFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="5"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tblList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >

        <ListView
            android:id="@+id/lvFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" >

        </ListView>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
         android:layout_weight="1">
        
        <EditText
            android:id="@+id/etInput2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="text"
            android:text="@string/Blank"
             >
           
        </EditText>
        
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tvPortion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="5"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
         android:layout_weight="1">
        
         <EditText
             android:id="@+id/etInput3"
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:layout_weight="1"
             android:background="#FFFFFF"
             android:ems="10"
             android:inputType="text"
             android:text="@string/Blank" >
           
        </EditText>
        
    </TableRow>

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="5"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_weight="1" >
        
         <EditText
             android:id="@+id/etInput4"
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:layout_weight="1"
             android:background="#FFFFFF"
             android:ems="10"
             android:inputType="text"
             android:text="@string/Blank"
            >
           
        </EditText>
        
    </TableRow>

    <TableRow
        android:id="@+id/tableRow10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/Submit" />

    </TableRow>

</TableLayout>
